<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="4dp"
    tools:layout_width="wrap_content">

    <TextView
        android:id="@+id/forecast_day_of_week"
        style="@style/forecast_column_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="wo" />

    <TextView
        android:id="@+id/forecast_date"
        style="@style/forecast_column_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        tools:text="14-jan" />

    <ImageView
        android:id="@+id/weather_icon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_default"
        android:adjustViewBounds="true"
        tools:src="@drawable/ic_cloud_black" />

    <TextView
        android:id="@+id/forecast_temp_max"
        style="@style/forecast_column_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_default"
        android:textColor="@color/temperatureMax"
        tools:text="17°C" />

    <TextView
        android:id="@+id/forecast_temp_min"
        style="@style/forecast_column_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textColor="@color/temperatureMin"
        tools:text="13°C" />
</LinearLayout>
