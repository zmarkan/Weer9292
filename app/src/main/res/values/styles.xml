<resources>

    <style name="homeHeaderText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="forecast_column">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="forecast_column_text">
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="weather_detail_sub_header">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">@dimen/padding_default</item>
        <item name="android:textSize">@dimen/text_size_detail</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
